<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <%- include('../partials/spinner'); %>
            <!-- Spinner End -->


            <!-- Sidebar Start -->
            <%- include('../partials/user-sidebar'); %>
                <!-- Sidebar End -->


                <!-- Content Start -->
                <div class="content">
                    <!-- Navbar Start -->
                    <%- include('../partials/user-navbar'); %>
                        <!-- Navbar End -->


                        <!-- Map Start -->
                        <div class="container-fluid pt-4 px-4">
                            <div class="row g-4">
                                <div class="col-sm-12 col-xl-6">
                                    <div class="h-100 bg-secondary rounded p-4">
                                        <div class="d-flex align-items-center justify-content-between mb-4">
                                            <h6 class="mb-0">Live Location</h6>
                                            <hr>
                                        </div>
                                        <%- include('../partials/selectloc'); %>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-xl-6">
                                    <div class="h-100 bg-secondary rounded p-4">
                                        <div class="d-flex align-items-center justify-content-between mb-4">
                                            <h6 class="mb-0">Send SOS</h6>
                                            <hr>
                                        </div>
                                        <form action="/report" method="POST">
                                            <label class="form-label mb-1">
                                                <h4> What disaster are your experiencing right now?</h4>
                                            </label>

                                            <div class="row g-2 mb-3">
                                                <div class="bg-secondary col-6 rounded d-flex align-items-center justify-content-between p-4">
                                                    <i class="fa fa-chart-pie fa-3x text-primary me-3"></i>
                                                    <button class="btn btn-danger w-100 fs-5" type="submit" name="disaster_type" value="Fire">Fire</button>
                                                </div>
                                                
                                                <div class="bg-secondary col-6 rounded d-flex align-items-center justify-content-between p-4">
                                                    <i class="fa fa-chart-pie fa-3x text-primary me-3"></i>
                                                    <button class="btn btn-primary w-100 fs-5" type="submit" name="disaster_type" value="Flood">Flood</button>
                                                </div>

                                                <div class="bg-secondary col-6 rounded d-flex align-items-center justify-content-between p-4">
                                                    <i class="fa fa-chart-pie fa-3x text-primary me-3"></i>
                                                    <button class="btn btn-warning w-100 fs-5" type="submit" name="disaster_type" value="Earthquake">Earthquake</button>
                                                </div>

                                                <div class="bg-secondary col-6 rounded d-flex align-items-center justify-content-between p-4">
                                                    <i class="fa fa-chart-pie fa-3x text-primary me-3"></i>
                                                    <button class="btn btn-dark w-100 fs-5" type="submit" name="disaster_type" value="Landslide">Landslide</button>
                                                </div>
                                                <label class="form-label mb-3 border border-success p-2 rounded">Choose One button to send SOS!</label>
                                            </div>

                                            <label class="form-label mb-1">Your Location:</label>
                                            <textarea class="form-control mb-0" id="location" name="location" placeholder="Your Location" required></textarea>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Map End -->

                        <!-- Footer Start -->
                        <%- include('../partials/footer'); %>
                            <!-- Footer End -->

                </div>
                <!-- Content End -->


                <!-- Back to Top -->
                <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <script src="/js/script.js"></script>
</body>

</html>

